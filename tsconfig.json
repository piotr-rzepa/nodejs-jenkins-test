{
  "compilerOptions": {
    "target": "ES2020",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "node"                           
  },
  "exclude": ["node_modules", "tests"],
  "include": ["src"]
}
